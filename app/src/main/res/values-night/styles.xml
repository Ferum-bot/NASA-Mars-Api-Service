<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultStyleForTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="autoSizeMinTextSize">@dimen/autoSizeMinTextSizeTextView</item>
        <item name="autoSizeMaxTextSize">@dimen/autoSizeMaxTextSizeTextView</item>
        <item name="autoSizeStepGranularity">@dimen/autoSizeStepTextView</item>
    </style>


    <style name="BaseStyleForTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/allerta</item>
    </style>

    <style name="BaseStyleForDescriptionFragmentTextView" parent="BaseStyleForTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="BaseStyleForImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BaseStyleForButtons" parent="BaseStyleForTextView">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseStyleForSearchFragmentButtons" parent="BaseStyleForButtons">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="BaseStyleForTitleMainListTextView" parent="BaseStyleForTextView">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="BaseStyleForCardView">
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="BaseStyleForEditText" parent="BaseStyleForTextView">
        <item name="maxLines">1</item>
        <item name="android:maxLength">10</item>
        <item name="android:inputType">date</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="BaseStyleForRadioButton" parent="BaseStyleForTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="BaseStyleForSearchListItem" parent="BaseStyleForTextView">
        <item name="android:textSize">15sp</item>
    </style>
</resources>